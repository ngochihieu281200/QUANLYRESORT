@model VICTORY_HOTEL.ViewModels.DichVu_SD.DichVu_SDViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<!-- page content -->
<div class="right_col" role="main" style="min-height: 949px;">
    <div class="main_NV">
        <div class="page-title">
            <div class="title_left">
                <h3>Phân Quyền</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <!--Add List-->
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Thêm mới dịch vụ sử dụng<small></small></h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br>
                        @using (Html.BeginForm("Index", "DichVu_SD", FormMethod.Post, new { @class = "form-my form-horizontal form-label-left" }))
                        {
                            <div class="form-group">
                                @Html.ValidationSummary(true, "", new { @class = "dd-text-danger col-md-12" })
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">Dịch Vụ</label>
                                <div class="form-group">
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @Html.DropDownListFor(m => m.MaDV, new SelectList(ViewBag.List_DV, "Value", "Text", true), new { @id = "MaDV", @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">Phòng</label>
                                <div class="form-group">
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @Html.DropDownListFor(m => m.MaPhong, new SelectList(ViewBag.List_Phong, "Value", "Text", true), new { @id = "MaPhong", @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="number">
                                    Số lượng <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.TextBoxFor(m => m.SoLuong, new { @type = "number", @id = "SoLuong", @name = "SoLuong", @class = "form-control col-md-7 col-xs-12" })
                                    @*<input type="number" id="number" name="number" required="required" data-validate-minmax="10,100" class="form-control col-md-7 col-xs-12">*@
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">Trạng thái</label>
                                <div class="form-group">
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @{
                                            List<SelectListItem> listItems = new List<SelectListItem>();
                                            listItems.Add(new SelectListItem { Text = "Chưa thanh toán", Value = "False" });
                                            listItems.Add(new SelectListItem { Text = "Đã thanh toán", Value = "True" });
                                        }
                                        @Html.DropDownListFor(m => m.TrangThai, new SelectList(listItems, "Value", "Text", "False"), new { @id = "TrangThai", @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    <a href="/Admin/DichVu_SD/Index" class="btn btn-primary"><i class="fa fa-undo"></i> Làm mới </a>
                                    <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Lưu </button>
                                    <a id="Delete" class="btn btn-danger"><i class="fa fa-trash-o"></i> Xóa </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!--End Add List-->
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Danh sách dịch vụ sử dụng</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th style="width: 1%">STT</th>
                                    <th style="width: 15%">Dịch Vụ</th>
                                    <th style="width: 15%">Phòng</th>
                                    <th style="width: 15%">Số Lượng</th>
                                    <th style="width: 15%">Trang Thái</th>
                                    <th style="width: 20%">Edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int so = 1; }
                                @foreach (VICTORY_HOTEL.Models.DICHVU_SD nv in ViewBag.DICHVU_SD)
                                {
                                    <tr>
                                        <td>@(so++)</td>
                                        <td>
                                            <a>@nv.DICHVU.TenDV</a>
                                        </td>
                                        <td>
                                            <a>@nv.MaPhong</a>
                                        </td>
                                        <td>
                                            <a>@nv.SoLuong</a>
                                        </td>
                                        <td>
                                            @{
                                                string trangThai = "";
                                                if (nv.TrangThai == false) { trangThai = "Chưa thanh toán"; }
                                                else { trangThai = "Đã thanh toán"; }
                                            }
                                            <a>@trangThai</a>
                                        </td>
                                        <td>
                                            <a data-id-ma-DV="@nv.MaDV" data-id-ma-phong="@nv.MaPhong" class="btn btn-info btn-xs btn-edit"><i class="fa fa-pencil"></i> Sửa </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->
@* --------------------------------------------------------------------------------------------------- *@

<!-- jQuery -->
<script src="~/Areas/Admin/vendors/jquery/dist/jquery.min.js"></script>

<!--Show alert-->
@Html.Raw(TempData["msg"])

<!--My script-->
<script>
    $(document).ready(function () {

        $('#Delete').hide();

        $(this).on('click', '.btn-edit', function () {
            var ma_DV = $(this).attr('data-id-ma-DV');
            var ma_Phong = $(this).attr('data-id-ma-phong');
            var pid = ma_DV + "," + ma_Phong
            $.ajax({
                type: "POST",
                url: "/Admin/DichVu_SD/Edit",
                dataType: "json",
                data: { Id: pid },
                success: function (str) {
                    $('#MaDV').val(str[0]);
                    $('#MaPhong').val(str[1]);
                    $('#SoLuong').val(str[2]);
                    $('#TrangThai').val(str[3]);

                    //scroll top
                    $("html, body").animate({ scrollTop: 0 }, "slow");

                    //
                    $('#Delete').show();
                    $('#Delete').attr("href", "/Admin/DichVu_SD/Delete/" + pid);
                }
            });
        });
    });
</script>
<!--End My script-->
